
<%= form_for @tweet do |f| %>

	<% if @tweet.errors.any? %>
   		<div id="error_explanation">
    		<ul>
      			<% @tweet.errors.full_messages.each do |msg| %>
        			<font color="red"><li><%= msg %></li> </font>
      			<% end %>
     		</ul>
    	</div>
  <% end %>

	<div class="field">
    	<%= f.label "Compose a New Tweet (140 Characters)" %><br />
    	<%= f.text_area :text, :value => "What's Happening?", :size => "22x5" %>
  </div>

  <div class="field">
      <%= f.label "Privacy Setting" %>
      <%= f.select :privacySetting, [['Public',false], ['Private', true]]%>
  </div>


  <%= f.hidden_field :timeStamp, :value => Time.now %>
  <%= f.hidden_field :username, :value => current_user.username %>


  <div class="actions">
    	<%= f.submit %>
  </div>


<% end %>